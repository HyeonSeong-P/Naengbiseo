<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="34dp"/>

    <TextView
        android:id="@+id/foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="재료명"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="95dp"/>

    <EditText
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/foodName"
        app:layout_constraintBottom_toBottomOf="@id/foodName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="159dp"/>

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수량"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="95dp"/>

    <ImageButton
        android:id="@+id/minusBtn"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/minus_btn"
        app:layout_constraintTop_toTopOf="@id/quantity"
        app:layout_constraintBottom_toBottomOf="@id/quantity"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="159dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/minusBtn"
        app:layout_constraintRight_toRightOf="@id/plusBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageButton
        android:id="@+id/plusBtn"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/minus_btn"
        app:layout_constraintTop_toTopOf="@id/quantity"
        app:layout_constraintBottom_toBottomOf="@id/quantity"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="211dp"/>

    <TextView
        android:id="@+id/whereToStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보관장소"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="89.5dp"
        android:layout_marginLeft="95dp"/>

    <EditText
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/whereToStore"
        app:layout_constraintBottom_toBottomOf="@id/whereToStore"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="159dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>